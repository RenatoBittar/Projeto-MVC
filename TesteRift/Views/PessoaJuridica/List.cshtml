@model IEnumerable<TesteRift.Models.PessoaJuridica>

@{
    ViewBag.Title = "List";
}

<h2>List Pessoa Juridica</h2>

<p>
    @Html.ActionLink("Create New", "Create")
    @Html.ActionLink("Pesquisar", "Pesquisa")
</p>
<table class="table">
    <tr>
       
        <th>
            @Html.DisplayNameFor(model => model.CNPJ)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.RazaoSocial)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NomeFantasia)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        
        <td>
            @Html.DisplayFor(modelItem => item.CNPJ)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.RazaoSocial)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NomeFantasia)
        </td>
        
    </tr>
}

</table>
